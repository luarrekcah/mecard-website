<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title><%= user.nomeCompleto %> - rCard</title>

    <style>
      .profile-head {
        transform: translateY(5rem);
      }

      .cover {
        background-image: url(<%=user.imgs.background%>);
        background-size: cover;
        background-repeat: no-repeat;
      }

      body {
        background: #654ea3;
        background: linear-gradient(to right, #e96443, #904e95);
        min-height: 100vh;
        overflow-x: hidden;
      }
    </style>
  </head>

  <body>
    <div class="row py-5 px-4">
      <div class="col-md-5 mx-auto">
        <!-- Profile widget -->
        <div class="bg-white shadow rounded overflow-hidden">
          <div class="px-4 pt-0 pb-4 cover">
            <div class="media align-items-end profile-head">
              <div class="profile mr-3">
                <img src="<%=user.imgs.pfp%>" alt="Foto de Perfil" width="150" "
                class="rounded mb-2"> <% if(me) { %> <%
                if(me.username===user.username) { %>
                <a href="/edit" class="btn btn-outline-dark btn-sm btn-block"
                  >Editar Perfil</a
                >
                <% } %> <%}%>
              </div>
              <div class="media-body mb-5 text-white">
                <h4 class="mt-0 mb-0"><%=user.nomeCompleto%></h4>
                <p class="small mb-4">
                  <i class="fas fa-map-marker-alt mr-2"></i>
                  <%=user.local%>
                </p>
              </div>
            </div>
          </div>
          <div class="bg-light p-4 d-flex justify-content-end text-center">
            <ul class="list-inline mb-0">
              <%if(user.imgs.custom_icons) {%> <%
              user.imgs.custom_icons.forEach(item=> { %>
              <li class="list-inline-item">
                <img src="<%= item%>" width="25px" />
              </li>
              <% }) %> <% } %>
            </ul>
          </div>

          <div class="px-4 py-3">
            <div class="p-4 rounded shadow-sm bg-light">
              <p class="mb-0"><%=user.stts%></p>
            </div>
          </div>

          <div class="bg-light p-4 d-flex justify-content-center text-center">
            <a
              class="btn btn-primary"
              href="<%= user.customButton.link %>"
              style="color: white; width: 100%"
            >
              <img width="25px" src="<%= user.customButton.icon %>" />
              <%= user.customButton.title %>
            </a>
          </div>
          <div class="bg-light p-4 d-flex justify-content-center text-center">
            <ul class="list-inline mb-0">
              <li class="list-inline-item">
                <h5 class="font-weight-bold mb-0 d-block" id="dataNasc"></h5>
                <small class="text-muted">
                  <i class="fas fa-image mr-1"></i>Idade</small
                >
              </li>
            </ul>
          </div>

          <div class="bg-light p-4 d-flex justify-content-center text-center">
            <ul class="list-inline mb-0">
              <li class="list-inline-item">
                <a
                  type="button"
                  href="<%=user.redes.wpp%>"
                  class="btn btn-success"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-whatsapp"
                    viewBox="0 0 16 16"
                  >
